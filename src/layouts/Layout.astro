---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Perearstikeskus - Primary Care" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
		
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>
	<body class="bg-medical-bg text-medical-dark min-h-screen flex flex-col">
		<Navbar currentLang={lang} />
		
		<main class="flex-grow pt-20">
			<slot />
		</main>

		<Footer lang={lang} />

		<script>
			// Define the logic in a function we can call safely
			function handleIdentity() {
				// @ts-ignore
				if (window.netlifyIdentity) {
					// 1. Redirect to Admin panel upon successful login
					// @ts-ignore
					window.netlifyIdentity.on("login", () => {
						document.location.href = "/admin/";
					});

					// 2. FORCE OPEN if we see a recovery token in the URL
					// This fixes the issue where the redirect hides the token from the widget
					const hash = window.location.hash;
					if (hash.includes("recovery_token") || hash.includes("invite_token")) {
						// @ts-ignore
						window.netlifyIdentity.open("login"); // Open the modal automatically
					}
				}
			}

			// Run the logic immediately if available, or wait for load
			// @ts-ignore
			if (window.netlifyIdentity) {
				handleIdentity();
			} else {
				// If script hasn't loaded yet, check every 100ms
				const interval = setInterval(() => {
					// @ts-ignore
					if (window.netlifyIdentity) {
						clearInterval(interval);
						handleIdentity();
					}
				}, 100);
			}
		</script>
	</body>
</html>