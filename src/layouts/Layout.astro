---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	lang: string;
	description?: string;
}

const { title, lang, description = "Perearst Ãœlle Lomp - Perearstiteenus Mustvees ja Tartus." } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
		
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>
	<body class="bg-gradient-to-br from-[#fdfbf7] to-[#d4e4dc] text-medical-dark min-h-screen flex flex-col">
		<Navbar currentLang={lang} />
		
		<main class="flex-grow pt-20">
			<slot />
		</main>

		<Footer lang={lang} />

		<script is:inline>
			// 1. Check if we have a special token in the URL
			const hash = window.location.hash;
			
			// 2. If we do, immediately forward to the Admin panel
			if (hash.includes("recovery_token") || hash.includes("invite_token")) {
				window.location.href = "/admin/" + hash;
			}
			
			// 3. Optional: Handle normal login redirection
			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", user => {
					if (!user) {
						window.netlifyIdentity.on("login", () => {
							document.location.href = "/admin/";
						});
					}
				});
			}
		</script>
	</body>
</html>