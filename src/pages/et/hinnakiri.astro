---
import Layout from '../../layouts/Layout.astro';
import pricingData from '../../data/pricing.json';

const lang = 'et';
---

<Layout title="Hinnakiri - Perearst Ãœlle Lomp" lang={lang}>
    <section class="max-w-4xl mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-center text-medical-dark mb-4">Hinnakiri</h1>
        <p class="text-center text-gray-600 mb-12">Teenuste eest saab maksta ainult <span class="font-bold">sularahas</span></p>

        <div class="bg-white rounded-xl shadow-sm p-8 md:p-12">
            {pricingData.items.map((category) => (
                <div class="mb-10 last:mb-0">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">{category.category[lang]}</h2>
                    
                    <ul class="space-y-4">
                        {category.items.map((item) => (
                            <li class="flex items-baseline justify-between w-full group">
                                <span class="font-medium text-gray-700 pr-2 bg-white z-10">{item.name[lang]}</span>
                                
                                <span class="flex-grow border-b-2 border-dotted border-gray-300 mx-2 relative -top-1"></span>
                                
                                <span class="font-bold text-gray-900 pl-2 bg-white z-10 whitespace-nowrap">{item.price}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </section>
</Layout>