---
import Layout from '../../layouts/Layout.astro';
import hoursData from '../../data/hours.json';
import contactData from '../../data/contact.json'; 

const lang = 'et';
---

<Layout title="Kontakt" lang={lang}>
    <section class="max-w-7xl mx-auto px-4 py-12">
        <h1 class="text-4xl font-light mb-12 text-center">Kontakt ja vastuvõtuajad</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            
            <div class="bg-white p-8 rounded-2xl shadow-sm">
                <h2 class="text-2xl font-bold mb-6">Asukoht</h2>
                <p class="mb-4">
                    <strong>Aadress:</strong><br>
                    Pärnu mnt 123, Tallinn<br>
                    10111 Harjumaa
                </p>
                <p class="mb-4">
                    <strong>Telefon:</strong><br>
                    <a href="tel:+37255555555" class="text-blue-600 underline">+372 5555 5555</a>
                </p>

            </div>

            <div class="bg-white p-8 rounded-2xl shadow-sm">
                <h2 class="text-2xl font-bold mb-6">Avatud</h2>
                <table class="w-full text-left border-collapse">
                    <tbody>
                        {hoursData.map((row) => (
                            <tr class="border-b border-gray-100 last:border-0">
                                <td class="py-3 font-medium text-gray-700">{row.day[lang]}</td>
                                <td class="py-3 text-right text-gray-900">{row.hours}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</Layout>