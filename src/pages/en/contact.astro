---
import Layout from '../../layouts/Layout.astro';
import contactData from '../../data/contact.json';

const lang = 'en';
---

<Layout title="Contact - GP Ãœlle Lomp" lang={lang}>
    <section class="max-w-4xl mx-auto px-4 py-12">
        <h1 class="text-4xl font-light mb-12 text-center tracking-wide text-medical-dark">Contact & Reception Hours</h1>
        
        <div class="space-y-8">
            
            <div class="bg-medical-sage/20 p-8 md:p-10 rounded-3xl shadow-sm">
                <h2 class="text-2xl font-bold mb-8 text-center md:text-left text-medical-sage">Location</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="bg-white/60 p-6 rounded-xl">
                        <h3 class="text-xl font-semibold mb-4 text-gray-800">{contactData.locations[0].name}</h3>
                        <div class="space-y-2 text-gray-700">
                            <p>
                                <strong>Address:</strong><br>
                                {contactData.locations[0].address[lang]}
                            </p>
                            <p>
                                <strong>Phone:</strong><br>
                                <a href={`tel:${contactData.locations[0].phone.replace(/\s/g, '')}`} class="text-medical-sage font-bold hover:underline">
                                    {contactData.locations[0].phone}
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="bg-white/60 p-6 rounded-xl">
                        <h3 class="text-xl font-semibold mb-4 text-gray-800">{contactData.locations[1].name}</h3>
                        <div class="space-y-2 text-gray-700">
                            <p>
                                <strong>Address:</strong><br>
                                {contactData.locations[1].address[lang]}
                            </p>
                            <p>
                                <strong>Phone:</strong><br>
                                <a href={`tel:${contactData.locations[1].phone.replace(/\s/g, '')}`} class="text-medical-sage font-bold hover:underline">
                                    {contactData.locations[1].phone}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-medical-sage/20 p-8 md:p-10 rounded-3xl shadow-sm">
                <h2 class="text-2xl font-bold mb-8 text-center md:text-left text-medical-sage">Reception Hours</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    
                    <div>
                        <h3 class="text-xl font-semibold mb-6 border-b border-medical-sage/30 pb-2">Mustvee</h3>
                        
                        <div class="mb-6">
                            <h4 class="font-bold text-gray-800 mb-2">Nurse's reception</h4>
                            <ul class="space-y-1 text-gray-600">
                                <li class="flex justify-between"><span class="w-32 font-medium">Mon,Tue,Wed,Fri</span> <span>8:00 - 16:00</span></li>
                                <li class="flex justify-between"><span class="w-32 font-medium">Thu</span> <span>9:00 - 17:00</span></li>
                            </ul>
                        </div>

                        <div>
                            <h4 class="font-bold text-gray-800 mb-2">Doctor's reception</h4>
                            <ul class="space-y-1 text-gray-600">
                                <li class="flex justify-between"><span class="w-32 font-medium">Mon,Tue,Wed,Fri</span> <span>10:00 - 14:00</span></li>
                                <li class="flex justify-between"><span class="w-32 font-medium">Thu</span> <span>13:00 - 18:00</span></li>
                            </ul>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold mb-6 border-b border-medical-sage/30 pb-2">Tartu</h3>
                        
                        <div class="space-y-3 text-gray-600 mb-6">
                            <p class="flex justify-between">
                                <span class="font-medium">Mon-Fri 8:00 - 9:00</span>
                                <span class="text-sm italic text-gray-500">(by agreement)</span>
                            </p>
                            <p class="flex justify-between">
                                <span class="font-medium">Mon-Fri 8:00 - 10:00</span>
                                <span class="text-sm italic text-gray-500">(phone hours)</span>
                            </p>
                        </div>

                        <div class="space-y-4">
                            <div>
                                <h4 class="font-bold text-gray-800 mb-1">Doctor's reception</h4>
                                <p class="text-gray-600">Mon-Fri 14:00 - 16:00</p>
                            </div>
                            <div>
                                <h4 class="font-bold text-gray-800 mb-1">Nurse's reception</h4>
                                <p class="text-gray-600">Mon-Fri 13:00 - 16:00</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
</Layout>